{
  "compilerOptions": {
    /*common*/
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "preserve",
    "outDir": "out",
    /*urls*/
    "baseUrl": "./",
    "paths": {
      "@*": [
        "./pages/*"
      ]
    },
    /*triggers*/
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "downlevelIteration": true,
    "incremental": true
  },
  "exclude": [
    "./out/**/*",
    "./node_modules/**/*",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts"
  ]
}
